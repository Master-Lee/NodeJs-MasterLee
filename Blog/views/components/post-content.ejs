<div class="post-content">
  <div class="ui grid">
    <div class="four wide column">
      <a class="avatar"
         href="/posts?author=<%= post.authorinfo._id %>"
         data-title="<%= post.authorinfo.name %> | <%= ({m: '男', f: '女', x: '保密'})[post.authorinfo.gender] %>"
         data-content="<%= post.authorinfo.bio %>">
        <img class="avatar" src="/img/<%= post.authorinfo.avatar %>">
      </a>
    </div>

    <div class="eight wide column">
      <div class="ui segment">
        <h3><a href="/posts/<%= post._id %>"><%= post.title %></a></h3>
        <pre><%- post.content %></pre>
        <div>
          <span class="tag">create time:<%= post.created_at %></span>
          <span class="tag">lastmodify time:<%= post.lastModify %></span>
          <span class="tag right">
            <span>浏览(<%= post.pv %>)</span>
            <span>留言(<%= post.commentsCount %>)</span>

            <% if (user && post.authorinfo._id && user._id.toString() === post.authorinfo._id.toString()) { %>
              <div class="ui inline dropdown">
                <div class="text"></div>
                <i class="dropdown icon"></i>
                <div class="menu">
                  <div class="item"><a href="/posts/<%= post._id %>/edit">编辑</a></div>
                  <div class="item"><a href="/posts/<%= post._id %>/remove">删除</a></div>
                </div>
              </div>
            <% } %>

          </span>
        </div>
      </div>
    </div>
  </div>
</div>